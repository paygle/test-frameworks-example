  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Launch Karma Test",
      // "program": "${workspaceRoot}/build/dev-server.js",
      "program": "${workspaceRoot}/node_modules/karma/bin/karma",
      "args": [
        "start",
        "${workspaceRoot}/test/unit/karma.unit.config.js"
      ],
      "stopOnEntry": false,
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
          "--nolazy"
      ],
      "env": {
          "NODE_ENV": "development"
      }
    }
  ]
}